<script>
    var check=1;
    document.querySelector(".closeButton").addEventListener("click", close);
    function close(){
        document.getElementById("noti").className="popup-hidden";
        document.getElementById("status").innerText="";
    }
    function book(){
        document.getElementById("noti").className="popup";
        if (check%2==1)
            document.getElementById("status").innerText="Đặt vé thành công";
        else
            document.getElementById("status").innerText="Đặt vé thất bại";
        check++;

    }
</script>
